{
  "name": "recon-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=dev npm run build && npm run migration:run && nodemon -w dist --exec node dist/src/index.js",
    "build": "tsc",
    "watch": "tsc-watch",
    "dev": "npm run migration:run && concurrently \"npm run build\" \"npm run dev:run\"",
    "dev:watch": "npm run migration:run && concurrently \"npm run watch\" \"npm run dev:run\"",
    "dev:run": "nodemon dist/src/index.js",
    "test": "jest -c test/jest.config.js",
    "typeorm": "NODE_ENV=typeorm node ./node_modules/typeorm/cli.js --config dist/src/database/ormconfig.js",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "lint-fix": "eslint --fix src/**/* test/**/*"
  },
  "author": "",
  "dependencies": {
    "apollo-server": "^2.19.2",
    "faker": "^5.1.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.30"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "class-validator": "^0.13.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  }
}
